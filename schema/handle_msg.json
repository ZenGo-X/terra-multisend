{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HandleMsg",
  "anyOf": [
    {
      "type": "object",
      "required": [
        "echo"
      ],
      "properties": {
        "echo": {
          "type": "object",
          "required": [
            "recipient"
          ],
          "properties": {
            "recipient": {
              "$ref": "#/definitions/HumanAddr"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "multi_send"
      ],
      "properties": {
        "multi_send": {
          "type": "object",
          "required": [
            "payments"
          ],
          "properties": {
            "payments": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Payment"
              }
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "Coin": {
      "type": "object",
      "required": [
        "amount",
        "denom"
      ],
      "properties": {
        "amount": {
          "$ref": "#/definitions/Uint128"
        },
        "denom": {
          "type": "string"
        }
      }
    },
    "HumanAddr": {
      "type": "string"
    },
    "Payment": {
      "type": "object",
      "required": [
        "pay",
        "recipient"
      ],
      "properties": {
        "pay": {
          "$ref": "#/definitions/Coin"
        },
        "recipient": {
          "$ref": "#/definitions/HumanAddr"
        }
      }
    },
    "Uint128": {
      "type": "string"
    }
  }
}
